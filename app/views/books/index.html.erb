<h1>Listing books</h1>

<table>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Photo</th>
    <th>Description</th>
    <th>Price</th>
    <th>Categorie</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.isbn %></td>
    <td><%= book.title %></td>
    <td><%= book.photo %></td>
    <td><%= book.description %></td>
    <td><%= book.price %></td>
    <td><%= book.categorie %></td>
    <td><%= book.user_id %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

